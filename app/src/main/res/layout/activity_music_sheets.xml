<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDE7F6"
    tools:context=".MusicSheets_Activity">

    <ImageView
        android:id="@+id/musicIgniteLbl"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="25dp"
        android:src="@drawable/bgmenu2" />

    <ImageView
        android:id="@+id/backBtn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/backbtn"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        />
    <!-- (eto yung search icon
    <ImageView
        android:id="@+id/searchIconImg"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:src="@drawable/searchicon"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="15dp"
        /> -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/lister"
        android:layout_height="wrap_content">
        <SearchView
            android:id="@+id/search"
            android:layout_width="325dp"
            android:layout_height="50dp"
            android:layout_marginTop="125dp"
            android:layout_marginLeft="15dp"
            android:queryHint="Search here..."
            android:iconifiedByDefault="false"
            android:background="@drawable/btn_border"
            />
        <ImageView
            android:id="@+id/plusIconImg"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/plusicon"
            android:layout_marginTop="123dp"
            android:layout_toRightOf="@+id/search"
            android:layout_marginLeft="5dp"
            />



    </LinearLayout>

    <ListView
        android:id="@+id/listView"
        android:layout_width="380dp"
        android:layout_height="600dp"
        android:layout_below="@id/lister"
        android:layout_centerHorizontal="true"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"
        android:background="@drawable/btn_custom"
        android:layout_marginTop="15dp"
        />

</RelativeLayout>