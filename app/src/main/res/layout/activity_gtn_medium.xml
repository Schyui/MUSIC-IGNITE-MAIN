<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDE7F6"
    tools:context=".TimeRush">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/backbtn"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/backBtn"/>

    <ImageView
        android:id="@+id/musicIgniteLbl"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@drawable/bgmenu2"
        android:layout_marginBottom="60dp"
        android:layout_marginTop="25dp"
        android:layout_alignParentEnd="true"/>

    <ImageView
        android:id="@+id/ImageQuizNote_btn"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="30dp"
        android:scaleType="centerInside"

        android:src="@drawable/music_note_btn"
        android:background="@drawable/btn_border"
        android:padding="20dp"/>

    <TextView
        android:id="@+id/timerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ImageQuizNote_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text=""
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000"/>

    <GridLayout
        android:id="@+id/choicesGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timerText"
        android:layout_centerHorizontal="true"
        android:columnCount="3"
        android:rowCount="2"
        android:gravity="center">

        <Button
            android:id="@+id/choice1"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_border"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/choice2"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_border"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/choice3"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_border"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/choice4"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_border"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/choice5"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_border"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/choice6"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_border"
            android:layout_margin="10dp"/>
    </GridLayout>

</RelativeLayout>
