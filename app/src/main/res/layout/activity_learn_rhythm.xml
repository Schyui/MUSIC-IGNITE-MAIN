<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".Learn_Intervals"
    tools:openDrawer="start">

    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EDE7F6">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/backbtn" />

        <ImageView
            android:id="@+id/musicIgniteLbl"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="60dp"
            android:src="@drawable/bgmenu2" />



        <ImageView
            android:id="@+id/bgmenu1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/bgmenuu" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="120dp"
            android:text="  Rhythm \n and Meter"
            android:textSize="45sp"
            android:textAlignment="center"
            android:layout_marginBottom="60dp"
            android:scaleType="fitCenter"
            android:fontFamily="@font/irish"
            android:textColor="@color/black"
            />

        <Button
            android:id="@+id/rhythm_Lesson1"
            android:layout_width="130dp"
            android:layout_height="100dp"
            android:layout_marginTop="270dp"
            android:layout_marginStart="30dp"
            android:text="Lesson 1"
            android:textColor="@color/lavender"
            android:background="@drawable/btn_border"
            android:fontFamily="@font/irish"
            android:textSize="18sp"/>

        <View
            android:layout_width="150dp"
            android:layout_height="5dp"
            android:background="@color/lavender"
            android:layout_marginTop="320dp"
            android:layout_marginStart="160dp"/>

        <View
            android:layout_width="4dp"
            android:layout_height="100dp"
            android:background="@color/lavender"
            android:layout_marginTop="320dp"
            android:layout_marginStart="310dp"/>

        <View
            android:layout_width="225dp"
            android:layout_height="5dp"
            android:background="@color/lavender"
            android:layout_marginTop="420dp"
            android:layout_marginStart="90dp"/>


        <View
            android:layout_width="4dp"
            android:layout_height="115dp"
            android:background="@color/lavender"
            android:layout_marginTop="420dp"
            android:layout_marginStart="90dp"/>


        <View
            android:layout_width="160dp"
            android:layout_height="5dp"
            android:background="@color/lavender"
            android:layout_marginTop="530dp"
            android:layout_marginStart="90dp"/>

        <Button
            android:id="@+id/rhythm_Lesson2"
            android:layout_width="130dp"
            android:layout_height="100dp"
            android:layout_marginTop="480dp"
            android:layout_marginStart="250dp"
            android:text="Lesson 2"
            android:textColor="@color/lavender"
            android:background="@drawable/btn_border"
            android:fontFamily="@font/irish"
            android:textSize="18sp"/>



    </RelativeLayout>


</androidx.drawerlayout.widget.DrawerLayout>
