<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDE7F6"
    tools:context=".PerfectPitch">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/backbtn"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/backBtn"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:text="PERFECT\nPITCH"
        android:textSize="50dp"
        android:textAlignment="center"
        android:layout_marginBottom="30dp"
        android:scaleType="fitCenter"
        android:fontFamily="@font/irish"
        android:textColor="#000000"
        />
    <ImageView
        android:id="@+id/bgmenu1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bgmenuu"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        />
    <ImageView
        android:id="@+id/musicIgniteLbl"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@drawable/bgmenu2"
        android:layout_marginBottom="60dp"
        android:layout_marginTop="25dp"
        android:layout_alignParentEnd="true"
        />
    <Button
        android:id="@+id/TimeRushBtn"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:text="TIME RUSH!"
        android:textColor="@color/lavender"

        android:background="@drawable/btn_border"
        android:fontFamily="@font/irish"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300dp"
        android:layout_marginBottom="40dp"
        android:textSize="25sp"

        />

    <Button
        android:id="@+id/allInBtn"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:text="ALL IN!"
        android:layout_below="@+id/TimeRushBtn"
        android:textColor="@color/lavender"

        android:background="@drawable/btn_border"
        android:fontFamily="@font/irish"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:textSize="25sp"
        />

</RelativeLayout>