<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDE7F6"
    android:orientation="vertical"
    android:gravity="top|center_horizontal"
    tools:context=".TimeRush">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/backbtn" />

        <View
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/musicIgniteLbl"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/bgmenu2" />
    </LinearLayout>

    <ImageView
        android:id="@+id/speakerQuizBtn"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/speakerquiz_btn"
        android:background="@drawable/btn_border" />

    <TextView
        android:id="@+id/timerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text=""
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000" />

    <GridLayout
        android:id="@+id/choicesGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:columnCount="3"
        android:rowCount="2"
        android:gravity="center">

        <Button
            android:id="@+id/choice1"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Choice 1"
            android:background="@drawable/btn_border"
            android:layout_margin="10dp" />

        <Button
            android:id="@+id/choice2"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Choice 2"
            android:background="@drawable/btn_border"
            android:layout_margin="10dp" />

        <Button
            android:id="@+id/choice3"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Choice 3"
            android:background="@drawable/btn_border"
            android:layout_margin="10dp" />

        <Button
            android:id="@+id/choice4"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Choice 4"
            android:background="@drawable/btn_border"
            android:layout_margin="10dp" />

        <Button
            android:id="@+id/choice5"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Choice 5"
            android:background="@drawable/btn_border"
            android:layout_margin="10dp" />

        <Button
            android:id="@+id/choice6"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Choice 6"
            android:background="@drawable/btn_border"
            android:layout_margin="10dp" />
    </GridLayout>

</LinearLayout>
