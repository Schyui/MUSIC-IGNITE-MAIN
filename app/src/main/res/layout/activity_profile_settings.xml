<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/profileSettings"
    android:orientation="vertical"
    android:background="#EDE7F6"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/settingsScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="280dp"
            android:orientation="vertical"

            android:showDividers="middle"
            android:dividerPadding="8dp">

            <TextView
                android:id="@+id/emailDisplay"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Email: "
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:textColor="#474646"
                android:paddingVertical="16dp"
                android:clickable="true"
                android:drawableLeft="@drawable/baseline_email_24"
                android:drawablePadding="5dp"
                android:focusable="true" />
            <!-- Terms and Conditions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
          >

            <TextView
                android:id="@+id/passwordDisplay"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:text="Password: ***********"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:textColor="#474646"
                android:paddingVertical="16dp"
                android:clickable="true"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/baseline_lock_24"
                android:focusable="true" />
            <ImageView
                android:id="@+id/ChangePassword"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:textColor="#474646"
                android:paddingVertical="16dp"
                android:clickable="true"
                android:src="@drawable/baseline_edit_24"
                android:focusable="true" />
        </LinearLayout>


        </LinearLayout>
    </ScrollView>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profilePic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:src="@drawable/profileicon" />

    <ImageView
        android:id="@+id/changePfp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="150dp"

        android:layout_marginLeft="220dp"
        android:src="@drawable/baseline_edit_24"
        android:clickable="true"
        android:focusable="true" />
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/backbtn"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/backBtn"/>
    <TextView
        android:id="@+id/usernameDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text=""
        android:textSize="18sp"
        android:textColor="#000000"
        android:clickable="true"
        android:gravity="center"
        android:layout_below="@+id/changePfp"
        android:focusable="true" />

    <TextView
        android:id="@+id/distxt"
        android:layout_width="match_parent"
        android:gravity="center"
        android:textStyle="bold"
        android:paddingVertical="8dp"
        android:layout_height="wrap_content"
        android:text="Display Name"
        android:textSize="15dp"
        android:textColor="#474646"
        android:clickable="true"
        android:layout_marginTop="240dp"
        android:focusable="true" />

    <EditText
        android:id="@+id/EditDisplay"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:text=""
        android:layout_below="@+id/distxt"
        android:background="@drawable/btn_border"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:singleLine="true"

        android:divider="?android:attr/listDivider"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:textColor="#3A3939"
        android:clickable="true"
        android:focusable="true" />


</RelativeLayout>
