<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <solid android:color="#EDE7F6"/> <!-- Background color -->

    <!-- Border -->
    <stroke
        android:width="2dp"
        android:color="#9575CD" /> <!-- Border color -->

    <!-- Rounded corners -->
    <corners android:radius="16dp" />

    <!-- Optional padding -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />
</shape>
