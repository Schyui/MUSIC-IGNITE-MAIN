<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#FF0000" />  <!-- Background color when pressed -->
            <stroke
                android:width="2dp"
                android:color="#00796B" />  <!-- Border color when pressed -->
            <corners android:radius="8dp" />  <!-- Optional: rounded corners -->
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="#BDBDBD" />  <!-- Background color when disabled -->
            <stroke
                android:width="2dp"
                android:color="#757575" />  <!-- Border color when disabled -->
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />  <!-- Default background color -->
            <stroke
                android:width="4dp"
                android:color="#FF0000" />  <!-- Default border color -->
            <corners android:radius="8dp" />
        </shape>
    </item>
</selector>